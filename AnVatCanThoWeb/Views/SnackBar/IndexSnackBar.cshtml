@using AnVatCanTho.Models
@using AnVatCanThoWeb.Areas.SnackBar.ViewModels
@model IEnumerable<AnVatCanTho.Models.SnackBar>  // Replace with your actual namespace

@{
    ViewData["Title"] = "Snack Bar Page";
}

<div style="margin-top: -2px;" class="container-xxl bg-white p-0">
    <!-- Navbar & Hero Start -->
    <div class="container-xxl position-relative p-0">
        <div class="container-xxl py-5 bg-dark hero-header mb-5">
            <div class="container text-center my-5 pt-5 pb-4">
                @foreach (var snackBar in Model)
                {
                    <h1 class="display-3 text-white mb-3 animated slideInDown">@snackBar.DisplayName</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center text-uppercase">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Snack Bars</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">@snackBar.DisplayName</li>
                        </ol>
                    </nav>
                }
            </div>
        </div>
    </div>
    <!-- Navbar & Hero End -->
    <!-- Menu Start -->
    <div class="container-xxl py-5">
        <div class="container">
            @foreach (var snackBar in Model)
            {
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h1 class="mb-5">Products</h1>
                </div>
                <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane fade show p-0 active">
                            <div class="row g-4">
                                @foreach (var product in snackBar.Products)
                                {
                                    <div class="col-lg-6">
                                        <div class="d-flex align-items-center">
                                            <img class="flex-shrink-0 img-fluid rounded" src="@product.ProductImages.FirstOrDefault()?.PathName" alt="" style="width: 80px;">
                                            <div class="w-100 d-flex flex-column text-start ps-4">
                                                <h5 class="d-flex justify-content-between border-bottom pb-2">
                                                    <span>@product.Name</span>
                                                    <span class="text-primary">$@product.UnitPrice</span>
                                                </h5>
                                                <small class="fst-italic">@product.Description</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


            }

        </div>
    </div>
    <!-- Menu End -->
</div>