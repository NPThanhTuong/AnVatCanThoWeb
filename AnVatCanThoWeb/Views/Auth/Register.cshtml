@model AnVatCanThoWeb.ViewModels.Auth.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Đăng ký</title>
    @* Custom css *@
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    
    <div class="bg-login d-flex">
        <section class="col-6 mt-5 mx-auto">
            <div class="card shadow-lg rounded-3">
                <div class="card-body py-3">
                    <h5 class="card-title text-center fs-3 mb-4">Đăng ký tài khoản</h5>
                    <form asp-action="Register" asp-controller="Auth" method="post">
                        <input value="@ViewBag.ReturnUrl" name="ReturnUrl" hidden />
                        <div class="form-floating mb-2 col-8 mx-auto">
                            <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="name@example.com">
                            <label asp-for="Email" for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 col-8 mx-auto">
                            <input asp-for="Tel" type="text" class="form-control" id="Tel" placeholder="Số điện thoại">
                            <label asp-for="Tel" for="Tel">Số điện thoại</label>
                            <span asp-validation-for="Tel" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 col-8 mx-auto">
                            <input asp-for="Dob" type="date" class="form-control" id="Dob" placeholder="Ngày sinh" min="1900-01-01" max="2099-12-31">
                            <label asp-for="Dob" for="Dob">Ngày sinh</label>
                            <span asp-validation-for="Dob" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 col-8 mx-auto">
                            <input asp-for="Username" type="text" class="form-control" id="Username" placeholder="Họ và tên">
                            <label asp-for="Username" for="Username">Họ và tên</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-2 col-8 mx-auto">
                            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Mật khẩu">
                            <label asp-for="Password" for="Password">Mật khẩu</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4 col-8 mx-auto">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Nhập lại mật khẩu">
                            <label asp-for="ConfirmPassword" for="ConfirmPassword">Nhập lại mật khẩu</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="successModalLabel">Đăng ký thành công</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Bạn đã đăng ký tài khoản thành công!
                    </div>
                    <div class="modal-footer">
                            <a data-dismiss="modal" class="btn btn-secondary" asp-action="Login" asp-controller="Auth">Đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/console/js/scripts.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Kiểm tra giá trị ViewBag.RegisterSuccess
        @if (ViewBag.RegisterSuccess == true)
        {
            <text>
                $("#successModal").modal("show")
            </text>
        }
        });
    </script>
</body>
</html>
