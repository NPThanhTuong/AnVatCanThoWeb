@using AnVatCanTho.Models
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

@model Customer

<div style="margin-top: -2px;" class="container-xxl bg-white p-0">
    <!-- Navbar & Hero Start -->
    <div class="container-xxl position-relative p-0">
        <div class="container-xxl py-5 bg-dark hero-header mb-5">
            <div class="container text-center my-5 pt-5 pb-4">
                <h1 class="display-3 text-white mb-3 animated slideInDown font-roboto">Chỉnh sửa hồ sơ cá nhân</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center text-uppercase">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a asp-action="Profile" asp-controller="Home">Hồ sơ cá nhân</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Chỉnh sửa hồ sơ</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section>
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body text-center">
                            <img src="~/images/User/@Model.Avatar" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px; height: 150px">
                            <p class="my-3">Ảnh đại diện</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <form asp-action="EditProfile" asp-controller="Home" method="post" enctype="multipart/form-data">
                                <input type="text" asp-for="Avatar" value="@Model.Avatar" hidden />
                                <input type="text" asp-for="Id" value="@Model.Id" hidden />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label asp-for="DisplayName" class="form-label">Tên hiển thị:</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="DisplayName" placeholder="name@example.com" value="@Model.DisplayName" />
                                        <span asp-validation-for="DisplayName" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label asp-for="Email" class="form-label">Email:</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com" value="@Model.Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label asp-for="Tel" class="form-label">Số điện thoại:</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="tel" class="form-control" asp-for="Tel" placeholder="0872377723" value="@Model.Tel" />
                                        <span asp-validation-for="Tel" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label asp-for="Dob" for="Dob" class="form-label">Ngày sinh</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input asp-for="Dob" type="date" class="form-control" id="Dob" placeholder="Ngày sinh" min="1900-01-01" max="2099-12-31">
                                        <span asp-validation-for="Dob" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="fileUploadInput" class="form-label">Ảnh đại diện:</label>
                                    </div>
                                    <div class="col-sm-9">
                                        <input type="file" class="form-control" id="fileUploadInput" name="fileUpload" />
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mt-5">
                                    <button type="submit" class="btn btn-primary text-white">Cập nhật</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
@section Styles {
}

@section Scripts {
    <script>
        @if (TempData["Success"] is not null)
        {
            @Html.Raw($"toastr.success('{TempData["Success"]}')")
        }
        @if (TempData["Failed"] is not null)
        {
            @Html.Raw($"toastr.error('{TempData["Failed"]}')")
        }
    </script>
}