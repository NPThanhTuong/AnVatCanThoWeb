@model AnVatCanTho.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/SnackBar/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Xóa sản phẩm</h1>
            <h3>Bạn có chắc chắn là muốn xóa sản phẩm này?</h3>
            <div>
                <hr />
                <dl class="row g-3">
                    <div class="col-md-6">
                    <dt> 
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    </div>
                    <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.SnackBarId)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SnackBarId)
                    </dd>
                    </div>
                    <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductCategory.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductCategory.Name)
                    </dd>
                    </div>
                    <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    </div>
                    <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    </div>
                    <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.Ingredient)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Ingredient)
                    </dd>
                    </div>
                    <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.Stock)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Stock)
                    </dd>
                    </div>
                    <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.UnitPrice)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UnitPrice)
                    </dd>
                    </div>
                </dl>

                <form asp-action="Delete">
                    <input type="submit" value="Xóa" class="btn btn-warning hover" />
                    <span>
                        <a asp-action="Index" class="btn btn-danger">
                            <i class="fa-solid fa-arrow-left">Trở về danh sách sản phẩm</i>
                        </a>
                    </span>
                </form>
            </div>
        </div>
    </div>
</div>